---
import "../styles/global.css";
import Header from "../components/Header.astro";

const lineUrl = "/images/sanscouleur.svg";
const colorUrl = "/images/aveccouleur.svg";
---
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Alexandre Demling - Portfolio</title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap');

    .major-mono-display-regular {
      font-family: "Major Mono Display", monospace;
      font-weight: 400;
      font-style: normal;
    }

    .footer-link {
      position: relative;
      text-decoration: none;
    }

    .footer-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 0;
      height: 1px;
      background-color: white;
      transition: width 0.3s ease;
    }

    .footer-link:hover::after {
      width: 100%;
    }

    /* ===== BANDEAU DÉFILANT ===== */
    .skills-marquee {
      background: black;
      color: white;
      overflow: hidden;
      white-space: nowrap;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .skills-track {
      display: inline-flex;
      animation: marquee 25s linear infinite;
    }

    .skills-item {
      padding: 0 2rem;
      font-size: 14px;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      opacity: 0.9;
    }

    @keyframes marquee {
      from { transform: translateX(0); }
      to { transform: translateX(-50%); }
    }

    @media (max-width: 640px) {
      .skills-item {
        font-size: 11px;
        padding: 0 1.2rem;
      }
    }

    /* ===== RESPONSIVE EXISTANT ===== */
    @media (max-width: 640px) {
      .portrait-container { max-width: 180px; }
      .title-text { font-size: 28px; line-height: 1.1; word-break: break-word; }
      footer { height: 60px; padding: 0 1rem; font-size: 10px; }
      .footer-link { font-size: 10px; }
    }

    @media (min-width: 641px) and (max-width: 1024px) {
      .portrait-container { max-width: 200px; }
      .title-text { font-size: 42px; line-height: 1.1; }
      footer { height: 50px; padding: 0 1.5rem; }
      .footer-link { font-size: 13px; }
    }

    @media (min-width: 1025px) {
      .portrait-container { max-width: 200px; }
      .title-text { font-size: 68px; line-height: 1; }
      footer { height: 50px; padding: 0 4rem; }
      .footer-link { font-size: 14px; }
    }

    @media (min-width: 1536px) {
      .title-text { font-size: 76px; }
      .portrait-container { max-width: 240px; }
    }
  </style>
</head>

<body class="m-0 p-0 overflow-hidden min-h-screen flex flex-col">
  <Header />

  <main class="relative bg-white text-black flex-1 overflow-hidden flex flex-col">
    <div class="flex-1 flex items-center justify-center px-4 sm:px-8 lg:px-16">
      <div class="max-w-7xl w-full mx-auto flex flex-col lg:flex-row items-center justify-center lg:justify-between gap-6 lg:gap-16">

        <!-- PORTRAIT -->
        <div class="portrait-container relative group w-full flex-shrink-0">
          <button
            type="button"
            class="relative w-full focus:outline-none"
            onclick="this.classList.toggle('active')"
          >
            <img
              src={lineUrl}
              alt="Portrait vectoriel Alexandre Demling"
              class="w-full h-auto object-contain transition-opacity duration-500 group-hover:opacity-0 active:opacity-0"
            />
            <img
              src={colorUrl}
              alt="Portrait coloré Alexandre Demling"
              class="absolute inset-0 w-full h-auto object-contain opacity-0 transition-opacity duration-500 group-hover:opacity-100 active:opacity-100"
            />
          </button>
        </div>

        <div class="flex items-center justify-center lg:justify-end w-full lg:w-auto">
          <h1 class="title-text major-mono-display-regular text-center lg:text-right">
            Alexandre Demling
          </h1>
        </div>

      </div>
    </div>
  </main>

  <!-- ===== BANDEAU COMPÉTENCES ===== -->
  <div class="skills-marquee">
    <div class="skills-track">
      <span class="skills-item">VS Code</span>
      <span class="skills-item">HTML</span>
      <span class="skills-item">CSS</span>
      <span class="skills-item">JavaScript</span>
      <span class="skills-item">Astro</span>
      <span class="skills-item">Tailwind CSS</span>
      <span class="skills-item">PocketBase</span>
      <span class="skills-item">Netlify</span>
      <span class="skills-item">WordPress</span>
      <span class="skills-item">SQL</span>
      <span class="skills-item">DaVinci Resolve</span>
      <span class="skills-item">Design & UI/UX</span>
      <span class="skills-item">Adobe Illustrator</span>
      <span class="skills-item">Figma</span>
      <span class="skills-item">Canva</span>

      <!-- duplication -->
      <span class="skills-item">VS Code</span>
      <span class="skills-item">HTML</span>
      <span class="skills-item">CSS</span>
      <span class="skills-item">JavaScript</span>
      <span class="skills-item">Astro</span>
      <span class="skills-item">Tailwind CSS</span>
      <span class="skills-item">PocketBase</span>
      <span class="skills-item">Netlify</span>
      <span class="skills-item">WordPress</span>
      <span class="skills-item">SQL</span>
      <span class="skills-item">DaVinci Resolve</span>
      <span class="skills-item">Design & UI/UX</span>
      <span class="skills-item">Adobe Illustrator</span>
      <span class="skills-item">Figma</span>
      <span class="skills-item">Canva</span>
    </div>
  </div>

  <footer class="bg-black w-full flex items-center justify-between text-white flex-shrink-0">
    <div class="flex items-center gap-4">
      <a href="https://www.linkedin.com/in/alexandre-demling-965a90346" target="_blank" class="footer-link uppercase">LinkedIn</a>
      <a href="https://github.com/Alexandre-Demling" target="_blank" class="footer-link uppercase">Github</a>
    </div>
    <a href="/mentionlegale" class="footer-link uppercase">Mentions légales</a>
  </footer>
</body>
</html>
