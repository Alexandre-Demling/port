---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// IMAGES STATIQUES (public/images)
const lineUrl = "/images/versionsanscouleur.png";
const colorUrl = "/images/versioncouleur.png";

// COMPÉTENCES
const webSkills = [
  { name: "VS Code", icon: "/images/vscode.png" },
  { name: "HTML", icon: "/images/html.png" },
  { name: "CSS", icon: "/images/css.png" },
  { name: "JavaScript", icon: "/images/js.png" },
  { name: "Astro", icon: "/images/astro.png" },
  { name: "Tailwind CSS", icon: "/images/tailwind.png" },
  { name: "PocketBase", icon: "/images/pocketbase.png" },
  { name: "Netlify", icon: "/images/Netlify.png" },
  { name: "WordPress", icon: "/images/wordpress.png" },
  { name: "SQL", icon: "/images/sql.png" },
];

const audiovisuelSkills = [
  { name: "DaVinci Resolve", icon: "/images/davinci.png" },
];

const designSkills = [
  { name: "Adobe Illustrator", icon: "/images/ai.png" },
  { name: "Figma", icon: "/images/figma (1).png" },
  { name: "Canva", icon: "/images/canva.png" },
];

// PROJETS
const projects = [
  {
    title: "Orbite",
    subtitle: "Plateforme d’événements étudiants",
    description:
      "Orbite : une plateforme pensée par et pour les étudiants, favorisant rencontres, événements et intégration grâce à un design moderne et une expérience ludique.",
    image: "/images/LandingPageorbite.png",
  },
  {
    title: "Modulo",
    subtitle: "Identité visuelle éco-responsable",
    description:
      "Modulo : une refonte de logo pour une marque éco-responsable et chic, mettant en avant modularité, durabilité et élégance à travers une identité visuelle forte.",
    image: "/images/modulomoodboard.png",
  },
  {
    title: "Mon logo",
    subtitle: "Recherche graphique personnelle",
    description:
      "Mon logo : un projet personnel de recherche graphique qui explore formes, couleurs et lisibilité afin de donner vie à une identité claire et distinctive.",
    image: "/images/logo.png",
  },
];

// CLASSES IMAGES
const projectImageClasses = [
  "w-full h-full object-cover scale-[1.25]",
  "w-full h-full object-cover scale-[1.25]",
  "w-full h-full object-contain bg-white p-10",
];
---

<Header />

<main class="relative bg-[#F1E7C7] text-black min-h-screen overflow-x-hidden">

  <!-- BARRE VERTICALE GLOBALE -->
  <div
    class="absolute inset-y-0 left-4 md:left-8 lg:left-[34.5px] border-l-[3px] lg:border-l-4 border-black pointer-events-none z-20"
  ></div>

  <!-- ========================= -->
<!-- HERO MOBILE (LG HIDDEN)   -->
<!-- ========================= -->
<div class="block lg:hidden w-full pt-10 pb-12">

  <!-- TITRE "Graphiste" -->
  <h1 class="heading-font text-[36px] pl-12 pr-4 mb-4">
    Graphiste
  </h1>

  <!-- CADRE DIAGONAL + NOM + PORTRAIT -->
  <div class="relative w-full px-6">

    <!-- TON SVG D’ORIGINE -->
    <svg
  width="322"
  height="487"
  viewBox="0 0 322 487"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="w-full h-auto translate-x-[24px]"   
>
  <!-- Ligne horizontale fine -->
  <path d="M24.9988 1H321.999" stroke="black" stroke-width="1" />

  <!-- Diagonale fine -->
  <path d="M24.9988 1L0.998779 420" stroke="black" stroke-width="1" />
</svg>

    <!-- "Alexandre Demling" placé comme sur la maquette -->
     <p
    class="heading-font absolute top-[95px] left-1/2 -translate-x-1/2 text-[36px] leading-tight text-center"
  >
    Alexandre Demling
  </p>

   <!-- PORTRAIT : réduit et décalé davantage à droite -->
<div class="absolute top-[145px] left-[28px] w-full flex justify-center">
  <div class="relative group w-[52%]">
    <img
      src={lineUrl}
      alt="Portrait vectoriel Alexandre Demling"
      class="w-full object-contain transition-opacity duration-500 group-hover:opacity-0"
    />
    <img
      src={colorUrl}
      alt="Portrait coloré Alexandre Demling"
      class="w-full object-contain absolute inset-0 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
    />
  </div>
</div>
  </div>

  <!-- BARRE DE SÉPARATION IDENTIQUE AUX AUTRES -->
  <div class="w-full mt-[-200px] mb-6">
    <svg
      viewBox="0 0 1600 9"
      xmlns="http://www.w3.org/2000/svg"
      class="w-full h-[11px]"
    >
      <path d="M0 4L1600 4" stroke="black" stroke-width="5" />
      <path d="M180 4H260" stroke="#F1E7C7" stroke-width="12" />
      <path d="M1340 4H1420" stroke="#F1E7C7" stroke-width="12" />
    </svg>
  </div>

  <!-- TEXTE UI/UX -->
 <section class="max-w-6xl mx-auto px-16 text-[15px] leading-relaxed">
  <p class="mb-4">
    &Eacute;tudiant en deuxi&egrave;me ann&eacute;e de BUT<br />
    MMI, parcours Cr&eacute;ation<br />
    <span class="font-bold block text-[24px] mt-3 mb-1">
      Design UI/UX
    </span>
    je suis passionn&eacute; par l&rsquo;univers visuel et
              num&eacute;rique.
  </p>

  <p class="mb-4">
    Cr&eacute;atif et curieux, j&rsquo;aime donner vie aux id&eacute;es
              &agrave; travers des affiches, logos, identit&eacute;s visuelles,
              mises en page et illustrations num&eacute;riques. Mon objectif est
              de concevoir des visuels clairs, esth&eacute;tiques et adapt&eacute;s
              &agrave; chaque projet.
  </p>

  
</section>

</div>


  <!-- ========================== -->
  <!-- HERO DESKTOP (MOBILE HIDE) -->
  <!-- ========================== -->
  <div class="hidden lg:block">
    <div class="relative max-w-6xl mx-auto px-16 pt-16 pb-24">
      <h1 class="heading-font text-[72px] leading-tight mb-20 ml-[-12px]">
        Graphiste
      </h1>

      <div class="flex justify-end mr-[-40px] lg:mr-[-117px]">
        <div class="relative w-[720px] md:w-[820px] lg:w-[800px] h-auto">
          <svg
            viewBox="0 0 945 920"
            xmlns="http://www.w3.org/2000/svg"
            class="w-full h-auto"
          >
            <path d="M114.984 2L944.985 2" stroke="black" stroke-width="5" />
            <path d="M44.9845 919L116.984 2" stroke="black" stroke-width="5" />
          </svg>

          <p
            class="heading-font absolute top-[120px] left-[140px] md:left-[170px]
                   text-[48px] md:text-[56px] lg:text-[64px] whitespace-nowrap"
          >
            Alexandre Demling
          </p>
        </div>
      </div>

      <!-- SECTION TEXTE + PORTRAIT (DESKTOP) -->
      <section
        class="mt-8 lg:mt-[-500px] relative z-10 grid grid-cols-1
                       lg:grid-cols-[0.6fr_1.1fr] gap-10 items-start"
      >
        <!-- TEXTE -->
        <div class="relative ml-[-60px]">
          <div class="max-w-md text-[16px] leading-[1.5]">
            <p class="mb-6 leading-snug">
              &Eacute;tudiant en deuxi&egrave;me ann&eacute;e de BUT<br />
              MMI, parcours Cr&eacute;ation<br />
              <span
                class="font-bold block text-[40px] leading-tight mt-3 mb-1"
              >
                Design UI/UX
              </span>
              je suis passionn&eacute; par l&rsquo;univers visuel et
              num&eacute;rique.
            </p>

            <p class="mb-5">
              Cr&eacute;atif et curieux, j&rsquo;aime donner vie aux id&eacute;es
              &agrave; travers des affiches, logos, identit&eacute;s visuelles,
              mises en page et illustrations num&eacute;riques. Mon objectif est
              de concevoir des visuels clairs, esth&eacute;tiques et adapt&eacute;s
              &agrave; chaque projet.
            </p>

            <p>
              En parall&egrave;le du design, je ma&icirc;trise &eacute;galement
              le d&eacute;veloppement front-end pour cr&eacute;er des interfaces
              modernes et fonctionnelles.
            </p>
          </div>
        </div>

        <!-- IMAGE -->
        <div class="flex justify-center lg:justify-end">
          <div
            class="relative group w-full max-w-[420px] lg:max-w-[500px] mt-6 lg:mt-0"
          >
            <img
              src={lineUrl}
              alt="Portrait vectoriel Alexandre Demling"
              class="w-full max-h-[460px] object-contain block
                     transition-opacity duration-500 group-hover:opacity-0"
            />
            <img
              src={colorUrl}
              alt="Portrait color&eacute; Alexandre Demling"
              class="w-full max-h-[460px] object-contain absolute inset-0
                     opacity-0 transition-opacity duration-500 group-hover:opacity-100"
            />
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- SÉPARATEUR -->
  <div class="w-full mt-[-62px]">
    <svg
      viewBox="0 0 1600 9"
      xmlns="http://www.w3.org/2000/svg"
      class="w-full h-[11px]"
    >
      <path d="M0 4L1600 4" stroke="black" stroke-width="5" />
      <path d="M180 4H260" stroke="#F1E7C7" stroke-width="12" />
      <path d="M1340 4H1420" stroke="#F1E7C7" stroke-width="12" />
    </svg>
  </div>

    <!-- ======================= -->
  <!--   MES COMPÉTENCES      -->
  <!-- ======================= -->
  <div class="relative max-w-6xl mx-auto px-16 pb-24 mt-14">
    <!-- Titre un peu plus grand en mobile -->
    <p class="heading-font text-base lg:text-sm mb-6">
      Mes Comp&eacute;tences
    </p>

    <!-- 2 colonnes aussi en mobile -->
    <div class="grid grid-cols-2 gap-8 lg:gap-20">
      <!-- WEB -->
      <div>
        <p class="heading-font text-[16px] lg:text-[14px] mb-1">
          D&eacute;veloppement Web
        </p>
        <div class="h-[3px] bg-black w-[280px] mb-4"></div>

        <ul class="space-y-2">
          {webSkills.map((skill) => (
            <li class="flex items-center gap-3">
              <img
                src={skill.icon}
                alt={skill.name}
                class="w-8 h-8 object-contain"
              />
              <span class="font-mono text-[22px] lg:text-[20px] font-semibold">
                {skill.name}
              </span>
            </li>
          ))}
        </ul>
      </div>

      <!-- AUDIO + DESIGN -->
      <div>
        <p class="heading-font text-[16px] lg:text-[14px] mb-1">
          Audiovisuel
        </p>
        <div class="h-[3px] bg-black w-[280px] mb-4"></div>

        <ul class="space-y-2 mb-10">
          {audiovisuelSkills.map((skill) => (
            <li class="flex items-center gap-3">
              <img
                src={skill.icon}
                alt={skill.name}
                class="w-8 h-8 object-contain"
              />
              <span class="font-mono text-[22px] lg:text-[20px] font-semibold">
                {skill.name}
              </span>
            </li>
          ))}
        </ul>

        <p class="heading-font text-[16px] lg:text-[14px] mb-1">
          Design &amp; UI/UX
        </p>
        <div class="h-[3px] bg-black w-[280px] mb-4"></div>

        <ul class="space-y-2">
          {designSkills.map((skill) => (
            <li class="flex items-center gap-3">
              <img
                src={skill.icon}
                alt={skill.name}
                class="w-8 h-8 object-contain"
              />
              <span class="font-mono text-[22px] lg:text-[20px] font-semibold">
                {skill.name}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- SÉPARATEUR -->
  <div class="w-full mt-[-62px]">
    <svg
      viewBox="0 0 1600 9"
      xmlns="http://www.w3.org/2000/svg"
      class="w-full h-[11px]"
    >
      <path d="M0 4L1600 4" stroke="black" stroke-width="5" />
      <path d="M180 4H260" stroke="#F1E7C7" stroke-width="12" />
      <path d="M1340 4H1420" stroke="#F1E7C7" stroke-width="12" />
    </svg>
  </div>

  <!-- PROJETS (inchangé) -->
  <section
    data-carousel="projects"
    class="relative max-w-6xl mx-auto px-16 pb-24 mt-14"
  >
    <p class="heading-font text-sm mb-6">Mes Projets</p>

    <div class="grid grid-cols-1 lg:grid-cols-[0.7fr_1.3fr] gap-12 items-stretch">
      <!-- COLONNE TEXTE + BOUTON -->
      <div class="space-y-8">
        <!-- ORBITE -->
        <div data-carousel-text class="space-y-3">
          <h3 class="heading-font text-[28px]">Orbite</h3>
          <p class="font-mono text-[16px]">
            Plateforme d&rsquo;&eacute;v&eacute;nements &eacute;tudiants
          </p>
          <p class="font-mono text-[18px] leading-relaxed">
            Orbite : une plateforme pens&eacute;e par et pour les
            &eacute;tudiants, favorisant rencontres, &eacute;v&eacute;nements
            et int&eacute;gration gr&acirc;ce &agrave; un design moderne
            et une exp&eacute;rience ludique.
          </p>
        </div>

        <!-- MODULO -->
        <div data-carousel-text class="space-y-3 hidden">
          <h3 class="heading-font text-[28px]">Modulo</h3>
          <p class="font-mono text-[16px]">
            Identit&eacute; visuelle &eacute;co-responsable
          </p>
          <p class="font-mono text-[18px] leading-relaxed">
            Modulo : une refonte de logo pour une marque
            &eacute;co-responsable et chic, mettant en avant
            modularit&eacute;, durabilit&eacute; et &eacute;l&eacute;gance
            &agrave; travers une identit&eacute; visuelle forte.
          </p>
        </div>

        <!-- MON LOGO -->
        <div data-carousel-text class="space-y-3 hidden">
          <h3 class="heading-font text-[28px]">Mon logo</h3>
          <p class="font-mono text-[16px]">
            Recherche graphique personnelle
          </p>
          <p class="font-mono text-[18px] leading-relaxed">
            Mon logo : un projet personnel de recherche graphique qui
            explore formes, couleurs et lisibilit&eacute; afin de donner vie
            &agrave; une identit&eacute; claire et distinctive.
          </p>
        </div>

        <!-- BOUTON SOUS LE TEXTE -->
        <div class="mt-6">
          <a
            href="/projets"
            class="font-mono text-[18px] underline underline-offset-[6px]"
          >
            Voir mes projets
          </a>
        </div>
      </div>

      <!-- COLONNE CARROUSEL D'IMAGES -->
      <div class="relative h-[420px] flex justify-center lg:block">
        <div
          class="w-full max-w-[520px] h-full border-4 border-black overflow-hidden origin-top-left -skew-x-6 bg-white
                 lg:max-w-none lg:absolute lg:inset-0"
        >
          <div class="w-full h-full skew-x-6">
            {projects.map((project, index) => (
              <div
                data-carousel-slide
                class={index === 0 ? "w-full h-full" : "w-full h-full hidden"}
              >
                <img
                  src={project.image}
                  alt={project.title}
                  class={projectImageClasses[index]}
                />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<Footer />

<style>
  .heading-font {
    font-family: var(--font-heading);
  }
</style>

<script type="module" src="/src/js/carousel.js"></script>
