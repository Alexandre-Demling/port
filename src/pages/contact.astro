---
import "../styles/global.css";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact - Alexandre Demling</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap');
    
    .major-mono-display-regular {
      font-family: "Major Mono Display", monospace;
      font-weight: 400;
      font-style: normal;
    }
    
    .footer-link {
      position: relative;
      text-decoration: none;
    }
    
    .footer-link::after {
      content: '';
      position: absolute;
      left: 0;
      bottom: -2px;
      width: 0;
      height: 1px;
      background-color: white;
      transition: width 0.3s ease;
    }
    
    .footer-link:hover::after {
      width: 100%;
    }

    body, html {
      overflow: hidden;
      height: 100vh;
    }

    @media (max-width: 640px) {
      footer {
        height: 60px;
        padding: 0 1rem;
        font-size: 10px;
      }
      
      .footer-link {
        font-size: 10px;
      }
    }

    @media (min-width: 641px) and (max-width: 1024px) {
      footer {
        height: 50px;
        padding: 0 1.5rem;
      }
      
      .footer-link {
        font-size: 13px;
      }
    }

    @media (min-width: 1025px) {
      footer {
        height: 50px;
        padding: 0 4rem;
      }
      
      .footer-link {
        font-size: 14px;
      }
    }
  </style>
</head>

<body class="m-0 p-0 h-screen flex flex-col bg-white overflow-hidden">
  <Header />

  <!-- Reduced top spacing and adjusted layout to bring content higher -->
  <main class="flex-1 flex items-start justify-center px-4 lg:px-16 xl:px-24 pt-8 lg:pt-16">
    <div class="w-full max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 items-start">
      
      <!-- Left Column: Title and Contact Info -->
      <div class="flex flex-col gap-6 lg:gap-8">
        <h1 class="text-4xl sm:text-5xl lg:text-[64px] xl:text-[72px] major-mono-display-regular tracking-tight leading-tight">
          Contact
        </h1>
        

        <div class="flex flex-col gap-5">
          <div>
            <p class="text-xs uppercase tracking-widest mb-2 text-gray-400">Email</p>
            <a 
              href="mailto:alexandredemling@gmail.com" 
              class="text-base lg:text-lg hover:underline transition-all"
            >
              alexandredemling@gmail.com
            </a>
          </div>

          <div>
            <p class="text-xs uppercase tracking-widest mb-2 text-gray-400">Social</p>
            <div class="flex gap-6">
              <a
                href="https://www.linkedin.com/in/alexandre-demling-965a90346"
                target="_blank"
                rel="noopener noreferrer"
                class="text-base lg:text-lg hover:underline transition-all"
              >
                LinkedIn
              </a>
              <a
                href="https://github.com/Alexandre-Demling"
                target="_blank"
                rel="noopener noreferrer"
                class="text-base lg:text-lg hover:underline transition-all"
              >
                Github
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Form with additional fields -->
      <div class="flex items-start justify-center lg:justify-end">
        <form
          action="https://formspree.io/f/xblqkklp"
          method="POST"
          class="w-full max-w-md space-y-4"
        >
          <!-- Added more fields to the form -->
          <input
            type="text"
            name="prenom"
            placeholder="PRÉNOM"
            required
            class="w-full border-b border-black bg-transparent px-1 py-2 text-sm uppercase tracking-wider focus:outline-none focus:border-b-2 transition-all placeholder:text-gray-300"
          />

          <input
            type="text"
            name="nom"
            placeholder="NOM"
            required
            class="w-full border-b border-black bg-transparent px-1 py-2 text-sm uppercase tracking-wider focus:outline-none focus:border-b-2 transition-all placeholder:text-gray-300"
          />

          <input
            type="email"
            name="email"
            placeholder="EMAIL"
            required
            class="w-full border-b border-black bg-transparent px-1 py-2 text-sm uppercase tracking-wider focus:outline-none focus:border-b-2 transition-all placeholder:text-gray-300"
          />

          

          <input
            type="text"
            name="sujet"
            placeholder="SUJET"
            required
            class="w-full border-b border-black bg-transparent px-1 py-2 text-sm uppercase tracking-wider focus:outline-none focus:border-b-2 transition-all placeholder:text-gray-300"
          />

          <textarea
            name="message"
            placeholder="MESSAGE"
            required
            rows="3"
            class="w-full border-b border-black bg-transparent px-1 py-2 text-sm uppercase tracking-wider resize-none focus:outline-none focus:border-b-2 transition-all placeholder:text-gray-300"
          ></textarea>

          <button
            type="submit"
            class="bg-black text-white px-10 py-3 text-xs uppercase tracking-widest hover:bg-gray-800 transition-colors w-full mt-6"
          >
            Envoyer
          </button>
        </form>
      </div>
    </div>
  </main>

  <footer class="bg-black w-full h-[60px] sm:h-[50px] flex items-center justify-between text-white flex-shrink-0 px-4 sm:px-8 lg:px-16">
    <div class="flex items-center gap-2 sm:gap-4">
      <a 
        href="https://www.linkedin.com/in/alexandre-demling-965a90346" 
        target="_blank" 
        rel="noopener noreferrer"
        class="footer-link text-[10px] sm:text-xs lg:text-sm whitespace-nowrap uppercase"
      >
        LinkedIn
      </a>
      <span class="text-white/50 text-[10px] sm:text-xs lg:text-sm"></span>
      <a 
        href="https://github.com/Alexandre-Demling" 
        target="_blank" 
        rel="noopener noreferrer"
        class="footer-link text-[10px] sm:text-xs lg:text-sm whitespace-nowrap uppercase"
      >
        Github
      </a>
    </div>
    
    <a 
      href="/mentionlegale" 
      class="footer-link text-[10px] sm:text-xs lg:text-sm whitespace-nowrap uppercase"
    >
      <span class="hidden sm:inline">Mentions légales</span>
      <span class="sm:hidden">Mentions</span>
    </a>
  </footer>
</body>
</html>
