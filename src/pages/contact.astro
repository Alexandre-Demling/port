---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Header />

<main class="bg-[#F1E7C7] text-black min-h-screen">
  <div
    class="contact-container relative max-w-6xl mx-auto 
           px-6 sm:px-10 lg:px-16 
           pt-10 sm:pt-16 
           pb-6 sm:pb-10 lg:pb-20"
  >
    <!-- Barre verticale qui prolonge celle du header -->
    <div class="absolute inset-y-0 left-[-22px] border-l-4 border-black"></div>

    <!-- Titre -->
    <h1
      class="heading-font 
             text-[40px] sm:text-[56px] lg:text-[72px] 
             leading-tight 
             mb-10 sm:mb-16 lg:mb-20 
             ml-[-4px] sm:ml-[-8px] lg:ml-[-12px]"
    >
      Contactez moi
    </h1>

    <!-- Social / Email -->
    <section
      class="grid grid-cols-1 md:grid-cols-3 
             gap-8 md:gap-16 
             text-[16px] sm:text-[20px] 
             mb-8 md:mb-16 
             ml-2 sm:ml-8 md:ml-14"
    >
      <!-- Social -->
      <div>
        <p class="text-sm sm:text-base mb-2">Social</p>
        <div class="border-b-4 border-black w-40 sm:w-64 mb-4 sm:mb-6"></div>

        <a
          href="https://www.linkedin.com/in/alexandre-demling-965a90346"
          target="_blank"
          class="block hover:underline"
        >
          Linkedin
        </a>

        <a
          href="https://github.com/Alexandre-Demling"
          target="_blank"
          class="block hover:underline"
        >
          Github
        </a>
      </div>

      <!-- Email -->
      <div class="md:col-span-1">
        <p class="text-sm sm:text-base mb-2">Email</p>
        <div class="border-b-4 border-black w-40 sm:w-64 mb-4 sm:mb-6"></div>

        <p>alexandredemling@gmail.com</p>
      </div>
    </section>

    <!-- Ou écrivez moi directement ici -->
    <section class="mb-6 md:mb-10 ml-2 sm:ml-8 md:ml-14">
      <p class="mb-2">Ou &eacute;crivez moi directement ici</p>
      <div class="border-b-4 border-black w-full max-w-[960px]"></div>
    </section>

    <!-- Formulaire Formspree -->
    <section class="mt-6 md:mt-10 ml-2 sm:ml-8 md:ml-14">
      <form
        action="https://formspree.io/f/xblqkklp"
        method="POST"
        class="space-y-6 md:space-y-8"
      >
        <!-- Nom -->
        <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-10">
          <label class="text-lg sm:text-2xl md:text-3xl md:w-[190px]">
            Nom :
          </label>
          <input
            type="text"
            name="nom"
            placeholder="Votre Nom"
            required
            class="border-2 border-black bg-[#F1E7C7]
                   px-3 py-2 sm:px-4 sm:py-3
                   text-base sm:text-lg
                   w-full md:w-[720px]"
          />
        </div>

        <!-- Prénom -->
        <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-10">
          <label class="text-lg sm:text-2xl md:text-3xl md:w-[190px]">
            Pr&eacute;nom :
          </label>
          <input
            type="text"
            name="prenom"
            placeholder="Votre Prenom"
            required
            class="border-2 border-black bg-[#F1E7C7]
                   px-3 py-2 sm:px-4 sm:py-3
                   text-base sm:text-lg
                   w-full md:w-[720px]"
          />
        </div>

        <!-- Email -->
        <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-10">
          <label class="text-lg sm:text-2xl md:text-3xl md:w-[190px]">
            Email :
          </label>
          <input
            type="email"
            name="email"
            placeholder="Votre email"
            required
            class="border-2 border-black bg-[#F1E7C7]
                   px-3 py-2 sm:px-4 sm:py-3
                   text-base sm:text-lg
                   w-full md:w-[720px]"
          />
        </div>

        <!-- Message -->
        <div class="flex flex-col md:flex-row md:items-start gap-2 md:gap-10">
          <label
            class="text-lg sm:text-2xl md:text-3xl 
                   md:w-[190px] md:mt-2"
          >
            Message :
          </label>
          <textarea
            name="message"
            placeholder="Votre message"
            required
            class="border-2 border-black bg-[#F1E7C7]
                   px-3 py-2 sm:px-4 sm:py-3
                   text-base sm:text-lg
                   w-full md:w-[720px]
                   h-40 sm:h-52 md:h-64
                   resize-none"
          ></textarea>
        </div>

        <!-- Bouton Envoyer -->
        <div class="flex justify-end md:pr-[48px] pt-2 md:pt-4">
          <button
            type="submit"
            class="text-sm sm:text-base md:text-lg heading-font"
          >
            Envoyer
          </button>
        </div>
      </form>
    </section>
  </div>
</main>

<Footer />

<style>
  .heading-font {
    font-family: var(--font-heading);
  }
</style>
