---
const currentPath = Astro.url.pathname;
---

<header class="bg-[#F1E7C7] border-b-4 border-black sticky top-0 z-50">
  <div class="relative max-w-6xl mx-auto flex items-end justify-between px-12 pt-5 pb-2">
    <!-- Barre verticale dans le header -->
    <div class="pointer-events-none absolute inset-y-0 left-[-18px] border-l-4 border-black"></div>

    <!-- Logo alignÃ© avec la barre comme sur Figma -->
    <a href="/" class="flex items-center pl-0">
      <img src="/logo.png" alt="Logo Alexandre Demling" class="h-16 w-auto" />
    </a>

    <!-- Navigation (Kulim Park) -->
    <nav class="flex gap-20 text-2xl heading-font pb-1 pr-4">
      <a
        href="/"
        class={`hover:underline ${currentPath === '/' ? 'underline' : ''}`}
      >
        Profil
      </a>
      <a
        href="/projets"
        class={`hover:underline ${currentPath.startsWith('/projets') ? 'underline' : ''}`}
      >
        Projet
      </a>
      <a
        href="/contact"
        class={`hover:underline ${currentPath.startsWith('/contact') ? 'underline' : ''}`}
      >
        Contact
      </a>
    </nav>
  </div>
</header>

<style>
  .heading-font {
    font-family: var(--font-heading);
  }
</style>
